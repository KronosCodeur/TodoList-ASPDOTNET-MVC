@model Todo

@{
    ViewData["Title"] = "Create Todo";
}

<h1>Create Todo</h1>

<form asp-action="CreateTodo">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Category</label>
        @Html.DropDownListFor(m => m.CategoryId, ViewBag.Categories as SelectList, "Select a category")
    </div>
    <div class="form-group">
        <label asp-for="UserId">User</label>
        @Html.DropDownListFor(m => m.UserId, ViewBag.Users as SelectList, "Select a user")
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>