@model IEnumerable<User>

@{
    ViewData["Title"] = "List Users";
}

<h1>Users</h1>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Departments</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Id</td>
            <td>@user.Name</td>
            <td>@user.Department.Name</td>
        </tr>
    }
    </tbody>
</table>